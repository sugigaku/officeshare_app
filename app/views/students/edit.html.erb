<div class="container">
  <%= form_with model: @student, url: student_path, local: true do |f| %>

      <% if @student.errors.any? %>
        <% @student.errors.full_messages.each do |e|%>
          <p class="error_message"><%= e %></p>
        <% end %>
      <% end %>

    <div class="form-group">
      <%= f.label :名前 %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :大学 %>
      <%= f.text_field :college, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :学年 %>
      <%= f.number_field :grade, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :プロフィール %>
      <%= f.text_area :profile, class: "form-control", row: 6 %>
    </div>

    <div class="form-group">
      <%= f.label :アイコン画像 %>
      <%= f.file_field :icon, class: "form-control" %>
    </div>

    <%= f.submit "更新する", class: "btn btn-outline-dark" %>
  <% end %>
</div>