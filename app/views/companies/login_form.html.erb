<div class="container">

　
  <h4 class="text-center mt-4">ログイン</h4>


  <%= form_with url: companies_login_path, local: true do |f| %>

      <% if @error_message %>
        <p  class="error_message"><%= @error_message %></p>
      <% end %>

    <div class="form-group">
      <%= f.label :名前 %>
      <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード %>
      <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
    </div>

    <%= f.submit 'ログイン', class: 'btn btn-dark'%>
  <% end %>
</div>