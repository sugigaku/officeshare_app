<div class="container">
  <%= form_with model: @company, url: companies_path,　local: true do |f| %>

      <% if @error_message %>
        <div><%= @error_message %></div>
      <% end %>

    <div class="form-group">
      <%= f.label :会社名 %>
      <%= f.text_field :name, class: "form-control", placeholder: "会社名" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード %>
      <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
    </div>
    
    <div class="form-group">
      <%= f.label :場所 %>
      <%= f.text_field :place, class: "form-control", placeholder: "場所" %>
    </div>
    
    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
    </div>

    
    <div class="form-group">
      <%= f.label :プロフィール %>
      <%= f.text_area :profile, class: "form-control", placeholder: "プロフィール", row: 6 %>
    </div>

    <%= f.submit %>
  <% end %>
</div>