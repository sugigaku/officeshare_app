<%= form_for Post.new, url: posts_path, method: 'get' do |p| %>

   <div class="form-group">
      <%= p.date_field :date, class: 'form-control' %>
   </div>
   
   <div class="form-group">
      <%= p.text_field :place, class: 'form-control', placeholder: "場所" %>
   </div>

   <div class="form-group">
      <%= p.number_field :mxpeople, class: 'form-control', placeholder: "最大人数" %>
   </div>
   
   <%= p.submit '検索', class: 'btn' %>

<% end %>
<a href="/posts" class=" btn-primary mb-4">条件をクリア</a>


<% if params[:post]%>
　<p class="flexible-fontsize">&nbsp;&nbsp;該当件数:<%= @posts.length%>件</p>
<%else %>
　<p class="flexible-fontsize">&nbsp;&nbsp;件数:<%= @posts.length%>件</p>
<% end %>


<div class="container-fluid">
 <div class="row">

      <% @posts.each do |p| %>
      <hr>
      <div class="post col-12 my-4">
      <a href="/posts/<%= p.id %>" class="post_link">
      <div class="row">

               <div class="post_image col-xs-12 col-sm-6 text-center">
                  <%= image_tag  p.office_image.to_s %>
               </div>

               <div class="post_body col-xs-12 col-sm-6 mt-4">
                  <div class="post_texts">
                     <p class="flexible-fontsize"><i class="fa fa-user-o" aria-hidden="true"></i> 　<%= p.company.name %></p>
                     <p class="flexible-fontsize"><i class="fa fa-calendar" aria-hidden="true"></i> 　<%= p.date %></p>
                     <p class="flexible-fontsize"><i class="fa fa-building-o" aria-hidden="true"></i> 　<%= p.place %></p>
                     <p class="flexible-fontsize"><i class="fa fa-users" aria-hidden="true"></i> 　~<%= p.mxpeople %>人</p>
                     <p class="flexible-fontsize"><i class="fa fa-handshake-o" aria-hidden="true"></i>　<%= p.requirement %></p>
                  </div> 
               </div>
            
      </div>
      </a>  
      </div>
      <hr>
      <% end %>
   
 </div>
</div>
