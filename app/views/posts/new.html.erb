<div class="container">
    <%= form_with model: @post, url: posts_path, local: true do |f| %>
    
        <%if @error_message%>
            <div><%= @error_message %></div>
        <%end%>

        <div class="form-group">
            <%= f.label :place %>
            <%= f.text_field :place, class: "form-control", placeholder: "Place" %>
        </div>

        <div class="form_group">
            <%= f.label :date %>
            <%= f.text_field :date, class: "form-control", placeholder: "Date" %>
        </div>

        <div class="form_group">
            <%= f.label :mxpeople%>
            <%= f.text_field :mxpeople, class: "form-control", placeholder: "Mxpeople" %>
        </div>

        <div class="form_group"> 
            <%= f.label :requirement %>
            <%= f.text_area :requirement, class: "form-control", placeholder:"Requirement", row: 6 %>
        </div>

        <div class="form_group"> 
            <%= f.label :detail %>
            <%= f.text_area :detail, class: "form-control", placeholder:"Detail", row: 6 %>
        </div>

        
        <%= f.submit %>
    <% end %>
</div>
